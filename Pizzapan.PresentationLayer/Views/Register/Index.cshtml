@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<form method="post">
    <div class="container">
        <br />
        <label>Adınız</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Soyadınız</label>
        <input type="text" class="form-control" asp-for="Surname" />
        <br />
        <label>Kullanıcı adı</label>
        <input type="text" class="form-control" asp-for="Username" />
        <br />
        <label>Email Adresiniz</label>
        <input type="text" class="form-control" asp-for="Email" />
        <br />
        <label>şifreniz</label>
        <input type="text" class="form-control" asp-for="Password" />
        <br />
        <label>şifre tekrar</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-primary">Kayıt Ol</button>
