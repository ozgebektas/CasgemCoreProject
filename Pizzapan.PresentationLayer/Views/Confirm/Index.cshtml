                                                <label asp-for="UserName" class="control-label"></label>
                                                <input asp-for="UserName" class="form-control" />

                                            </div>
                                            <div class="form-group">
                                                <label asp-for="ConfirmCode" class="control-label"></label>
                                                <input asp-for="ConfirmCode" class="form-control" />

                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </form>
                                        <div>
                                            <a asp-action="Index">Listeye Geri dön</a>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6">
                            <a href="#" class="text-light"><small>Şifreni mi Unuttun?</small></a>
                        </div>
                        <div class="col-6 text-right">
                            <a href="/Register/Index/" class="text-light"><small>Yeni Hesap Oluştur</small></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->

    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/argon-dashboard-master/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/argon-dashboard-master/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
