@model List<Discount>
@{
    ViewData["Title"] = "DisCountCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>İndirim kody listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>İndirim Kodu</th>
        <th>Kullanım Hakkı</th>
        <th>Son kullanma tarihi</th>
    </tr>
    @foreach(var item in Model)
    {
        if (item.EndingDate < DateTime.Now)
        {
            <tr style="background-color:orangered">
                <td>@item.DiscountCode</td>
                <td>@item.DiscountCount</td>
                <td>@(((DateTime)item.EndingDate).ToString("dd-MMM-yyyy"))</td>
            </tr>
        }
        else
        {
            <tr style="background-color:lightgreen">
                <td>@item.DiscountCode</td>
                <td>@item.DiscountCount</td>
                <td>@(((DateTime)item.EndingDate).ToString("dd-MMM-yyyy"))</td>
            </tr>
        }
    }
</table>
<td> <a href="/Discount/CreateCode/" class="btn btn-info">Yeni Kupon</a></td>

